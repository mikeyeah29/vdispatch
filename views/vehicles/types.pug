extends ../layout

block content
	include ../partials/_header

	section#page-vehiclesoverview
		.container
			h1 Vehicles
			ol.breadcrumb
				li.breadcrumb-item
					a(href="/vehicles/overview") Vehicles Overview
				li.breadcrumb-item.active Vehicles &amp; Types

			ul.nav.nav-tabs
				li.nav-item
					a(href="/vehicles").nav-link Vehicles
				li.nav-item
					a(href="#").nav-link.active Types

			a(href="/vehicles/types/create-type").btn.add.btn-default.btn-nolist Add New Vehicle Type

			table.table-striped.table.table-condensed#table_types
				tr
					th Name
					th Code
					th Make &amp; Model
					th Seats
					th Suitcases
					th Carry On
					th
				each vehicleType in vehicleTypes
					tr
						td #{vehicleType.name}
						td #{vehicleType.code}
						td #{vehicleType.type.make} #{vehicleType.type.model}
						td #{vehicleType.features.seats}
						td #{vehicleType.features.suitcases}
						td #{vehicleType.features.carry_on}
						td.actions
							a(href=`/vehicles/types/edit/${vehicleType._id}`).btn.btn-warning.edit
							label.switch
								if vehicleType.status
									input(type="checkbox", data-itemid=`${vehicleType._id}` checked)
								else
									input(type="checkbox", data-itemid=`${vehicleType._id}`)
								.slider
							.spin

	script(src="/js/functions.js")
	script(src="/js/vehicles/vehicles.js")
				